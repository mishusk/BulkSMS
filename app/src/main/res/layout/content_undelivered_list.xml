<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="bulksms.tdd.tddbulksms.activity.UndeliveredList"
    tools:showIn="@layout/activity_undelivered_list">

    <Button
        android:id="@+id/btCopyNumbers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Copy Undelivered Numbers"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rvUnliveredlist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:listitem="@layout/recyclerview_deliveredlist">

    </android.support.v7.widget.RecyclerView>

</LinearLayout>
