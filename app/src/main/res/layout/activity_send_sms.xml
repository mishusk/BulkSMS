<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <EditText
        android:id="@+id/et_text_body"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="please type your message here:" />

    <Button
        android:id="@+id/bt_send_sms"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_text_body"
        android:onClick="bt_sendSms"
        android:text="send" />

    <Button
        android:id="@+id/bt_stopSms"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/bt_send_sms"
        android:onClick="bt_stopTheThread"
        android:text="stop sending sms" />

    <ListView
        android:id="@+id/contactList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/bt_stopSms" />
</RelativeLayout>